  }

  #ad-countdown .countdown-text {
    color: #aaa;
    margin-bottom: 4px;
  }

  #ad-countdown .countdown-number {
    font-size: 24px;
    font-weight: bold;
    color: #ff4d4d;
    text-align: center;
  }

  @keyframes pulse {
